<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuadruple"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/chihiro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuádruple"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="100dp"
        android:id="@+id/editaditoCuadruple"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cuádruple"
        android:id="@+id/CalcularC"
        android:backgroundTint="#EF9A9A"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textResultadoCuadruple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/RegresarC"
        android:backgroundTint="#C2185B"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"/>

</LinearLayout>